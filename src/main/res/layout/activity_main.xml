<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >


    <ListView
        android:id="@+id/listview"
        android:layout_width="377dp"
        android:layout_height="382dp"
        android:layout_below="@id/IdBuscar"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idGuardarRuta" />

    <Button
        android:id="@+id/idGuardarRuta"
        android:layout_width="185dp"
        android:layout_height="49dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="68dp"
        android:text="Save Ruta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/IdBuscar" />

    <Button
        android:id="@+id/IdConectar"
        android:layout_width="185dp"
        android:layout_height="46dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="20dp"
        android:text="Mod Manual"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/IdBuscar" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="148dp"
        android:layout_marginTop="24dp"
        android:text="Practica 3"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/IdBuscar"
        android:layout_width="197dp"
        android:layout_height="38dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="68dp"
        android:text="Buscar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>